{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": [
			"./app/**/*.js",
			"./app/**/*.mjs",
			"./app/**/*.ts",
			"./app/**/*.tsx",
			"./app/**/*.json",
			"./components/common/*.ts",
			"./components/common/*.tsx"
		]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
